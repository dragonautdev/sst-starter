  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug SST Dev",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/infra/*.ts",
        "${workspaceFolder}/infra/*.js",
        "${workspaceFolder}/packages/app/**/*.ts",
        "${workspaceFolder}/packages/app/**/*.js"
      ],
      "runtimeVersion": "22",
      "runtimeExecutable": "pnpm",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "sst",
        "dev"
      ],
      "console": "integratedTerminal",
    }
  ]
}